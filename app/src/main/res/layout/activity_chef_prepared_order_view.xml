<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".chefFoodPanel.ChefPreparedOrderView">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="Deliver Order"
        android:textColor="@color/purple"
        android:textSize="25sp"
        android:textStyle="bold"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recycle_viewOrder"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="29dp"
        android:scrollbars="vertical" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pri"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginStart="25dp"
                android:text="Total:"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Gtotal"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:text="Ksh. 2000"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/location"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginStart="25dp"
                android:text="Location:"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Cadress"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginStart="25dp"
                android:text="Name:"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Cname"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginStart="25dp"
                android:text="Number:"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Cnumber"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:text="Mobile number"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/shippername"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginStart="25dp"
                android:text="Shipper:"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/shipper"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="1dp"
                android:entries="@array/shipper" />


        </LinearLayout>

        <Button
            android:id="@+id/prepared"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/hollow"
            android:gravity="center"
            android:text="Deliver Order"
            android:textColor="@color/white"
            android:textSize="18dp">

        </Button>


    </LinearLayout>

</LinearLayout>