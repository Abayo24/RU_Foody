<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="21dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="8dp"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/Dishname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:maxWidth="300dp"
                android:text="Pannerr tikka"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginEnd="3dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/pricers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:text="Price: Ksh 50"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="x 3"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/totalrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Total: Ksh 150"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/elegantbtn"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            app:backgroundDrawable="@drawable/order_btn"
            app:textColor="@color/purple"
            app:textSize="5sp"
            app:backGroundColor="@color/white" />



    </LinearLayout>

</androidx.cardview.widget.CardView>